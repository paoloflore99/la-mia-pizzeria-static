@{
    ViewData["Title"] = "Home Page";
    Layout = null;
    ListaPizze pizzeliste = new ListaPizze();
    Pizze pizze1 = new Pizze("margherite", "inggredienti : suggo ", "~/img/fotopizza.png", 19.50);
    Pizze pizze2 = new Pizze("margherite", "inggredienti : suggo ", "~/img/fotopizza.png", 19.50);
    Pizze pizze3 = new Pizze("margherite", "inggredienti : suggo ", "~/img/fotopizza.png", 19.50);
    pizzeliste.PizzeList.Add(pizze1);
    pizzeliste.PizzeList.Add(pizze2);
    pizzeliste.PizzeList.Add(pizze3);
}
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<div class="text-center">
    <!--
    <h1 class="display-4">Welcome</h1>
